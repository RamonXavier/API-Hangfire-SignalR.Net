@model EstudoR2.ViewModels.ListaCursosViewModel


@{
    ViewBag.Title = "InserirModulo";
}

<h2>InserirModulo</h2>

@using (Html.BeginForm("InserirModuloAction", "Modulo", FormMethod.Post))
{
    <div class="form-group col-md-4">
        @Html.Label("nomeModulo", "Nome do Módulo")
        @Html.TextBox("nomeModulo", null, null, new { @class = "form-control" })
    </div>

    <div class="form-group col-md-8">
        @Html.Label("moduloCurso", "Curso deste Módulo")
        @Html.DropDownListFor(x => x.IdCursoSelecionado,
            new SelectList(Model.CursosDisponiveis, "id", "valor", Model.IdCursoSelecionado), "Curso...", new { @class = "form-control", @required = true })
    </div>
    <div class="form-group">
        <button type="submit" class="btn-primary btn-sm btn btn-success fa fa-floppy-o"> Salvar módulo</button>
        <button type="reset" class="btn-primary btn-sm btn btn-warning fa fa-trash"> Limpar dados</button>
    </div>
}