@model List<EstudoR2.ViewModels.ListaModulosViewModel>

@{
    ViewBag.Title = "ListarModulo";
}

<h2>Listar Módulos</h2>


<table id="table" class="table table-responsive table-condensed table-hover table-striped">
    <thead>
        <tr>
            <td>Id Módulo</td>
            <td>Nome do Módulo</td>
            <td>Curso do Módulo</td>
            <td>Ação/Excluir</td>
            <td>Ação/Editar</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var modulos in Model)
        {
            <tr>
                <td>@modulos.IdModulo</td>
                <td>@modulos.NomeModulo</td>
                <td>@modulos.NomeCurso</td>
                <td>@Html.ActionLink("  ", "Apagar", "Modulo", new { idModulo = @modulos.IdModulo }, new { @class = "btn btn-danger btn-block fa fa-trash btn-sm" })</td>
                <td>@Html.ActionLink(" ", "EditarModulo", "Modulo", new { idModulo = @modulos.IdModulo }, new { @class = "btn btn-primary btn-block btn-sm fa fa-pencil" })</td>
            </tr>
        }
    </tbody>
</table>


@Html.ActionLink(" ", "InserirModulo", "Modulo", new { @class = "btn btn-sm btn-primary fa fa-plus", @title = "" })
@Html.ActionLink(" ", "PdfModulo", "Modulo", new { @class = "btn btn-sm btn-primary fa fa-file", @title = "" })

@section scripts
{
    <script src="~/Content/js/modulos.js"></script>
}
