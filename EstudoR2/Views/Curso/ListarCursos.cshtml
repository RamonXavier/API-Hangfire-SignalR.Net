@model List<EstudoR2.Models.Curso>

@{
    ViewBag.Title = "Listar Cursos";
}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.css">
<h2>Listar Cursos</h2>

<table id="table" class="table table-striped table-responsive">
    <thead>
        <tr>
            <td>Id Do Curso</td>
            <td>Nome do Curso</td>
            <td>Ação/Excluir</td>
            <td>Ação/Editar</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var cursos in Model)
        {
            <tr>
                <td>@cursos.IdCurso</td>
                <td>@cursos.NomeCurso</td>
                <td>@Html.ActionLink("  ", "ApagaCurso", new { idCurso = cursos.IdCurso }, new { @class = "btn btn-danger btn-block fa fa-trash btn-sm" })</td>
                <td>@Html.ActionLink(" ", "EditarCurso", new { idCurso = cursos.IdCurso }, new { @class = "btn btn-primary btn-block btn-sm fa fa-pencil" })</td>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink(" ", "InserirCurso", null, new { @class = "btn btn-primary btn-sm fa fa-plus" })
