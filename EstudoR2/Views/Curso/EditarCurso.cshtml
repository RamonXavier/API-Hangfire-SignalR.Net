@model EstudoR2.Models.Curso

@{
    ViewBag.Title = "EditarCurso";
}

<h2>EditarCurso</h2>

@using (Html.BeginForm("Editar", "Curso", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("NomeCurso", "Nome do Curso")
        @Html.TextBox("nomeCurso", Model.NomeCurso, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("idCruso", "Código do Curso")
        @Html.TextBox("idCurso", Model.IdCurso, null, new { @class = "form-control", @readonly = true })
    </div>
    <button type="submit" class="btn btn-success btn-sm fa fa-floppy-o"> Salvar Edição</button>
    <button type="reset" class="btn-primary btn-sm btn btn-warning fa fa-trash"> Limpar dados</button>
}